<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/lbl_Name"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:padding="10dp"
        android:text="Name          :"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txt_Name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:hint="name here"
        android:layout_toRightOf="@id/lbl_Name"
        android:padding="10dp" />

    <TextView
        android:id="@+id/lbl_Department"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_Name"
        android:padding="10dp"
        android:text="Department:"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txt_Department"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/lbl_Name"
        android:hint="department here"
        android:layout_toRightOf="@id/lbl_Department"
        android:padding="10dp" />
    <TextView
        android:id="@+id/lbl_Salary"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_Department"
        android:padding="10dp"
        android:text="Salary          :"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txt_Salary"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:hint="salary here"
        android:layout_below="@id/lbl_Department"
        android:layout_toRightOf="@id/lbl_Salary"
        android:padding="10dp"/>

</RelativeLayout>